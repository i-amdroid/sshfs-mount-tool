{
  "chmod": "0755",
  "files": ["smt.php", "composer.json", "README.md"],
  "directories": ["src", "includes"],
  "finder": [
    {
      "in": "vendor",
      "notName": "/LICENSE|.*\\.md|.*\\.dist|Makefile|composer\\.json|composer\\.lock/",
      "exclude": [
          "doc",
          "test",
          "test_old",
          "tests",
          "Tests",
          "vendor-bin"
      ]
    }
  ],
  "main": "smt",
  "output": "smt.phar",
  "stub": true,
  "exclude-composer-files": false
}
